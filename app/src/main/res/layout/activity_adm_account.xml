<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/textViewTitleAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Личный кабинет администратора"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        style="@style/CustomFontTextView"/>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_adm"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewAdminFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            style="@style/CustomFontTextView"/>

        <TextView
            android:id="@+id/textViewAdminPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            style="@style/CustomFontTextView"/>

        <TextView
            android:id="@+id/textViewAdminPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="110dp" />

    <Button
        android:id="@+id/buttonScanQRCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сканировать QR-код"
        android:layout_marginTop="32dp"
        style="@style/CustomFontButton"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonAdminVisitHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="История посещений"
        android:layout_marginTop="16dp"
        style="@style/CustomFontButton"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonAddNewEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить сотрудника"
        android:layout_marginTop="16dp"
        style="@style/CustomFontButton"
        android:textStyle="bold"/>

</LinearLayout>

